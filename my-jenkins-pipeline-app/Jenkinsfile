pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS 24.0.2'  // Must match the name in Global Tool Configuration
    }
    
    environment {
        CI = 'true'
        BUILD_DOCKER = 'true'
        DOCKER_REGISTRY = 'docker.io'
        DOCKER_HUB_USERNAME = 'your-dockerhub-username'  // Replace with your username
        IMAGE_NAME = "${DOCKER_HUB_USERNAME}/my-jenkins-pipeline-app"
        IMAGE_TAG = "${BUILD_NUMBER}"
        APP_NAME = 'my-jenkins-pipeline-app'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Starting Pipeline for my-jenkins-pipeline-app...'
                echo 'Checking out code...'
                checkout scm
                script {
                    // Get Git information
                    env.GIT_COMMIT = sh(
                        script: 'git rev-parse HEAD',
                        returnStdout: true
                    ).trim()
                    try {
                        env.GIT_BRANCH = sh(
                            script: 'git rev-parse --abbrev-ref HEAD',
                            returnStdout: true
                        ).trim()
                    } catch (Exception e) {
                        env.GIT_BRANCH = env.BRANCH_NAME ?: 'unknown'
                    }
                }
                echo "Application: ${APP_NAME}"
                echo " Branch: ${env.GIT_BRANCH}"
                echo "Commit: ${env.GIT_COMMIT?.take(8)}"
            }
        }
        
        stage('Environment Info') {
            steps {
                echo ' Environment Information:'
                sh '''
                    echo "Application: my-jenkins-pipeline-app"
                    echo "Node.js version: $(node --version)"
                    echo "npm version: $(npm --version)"
                    echo "Working directory: $(pwd)"
                    echo "Available disk space:"
                    df -h
                '''
            }
        }
        
        stage('Install Dependencies') {
            steps {
                echo ' Installing dependencies for my-jenkins-pipeline-app...'
                sh '''
                    # Clean npm cache
                    npm cache clean --force
                    
                    # Install dependencies with optimized settings
                    npm ci --prefer-offline --no-audit
                    
                    echo " Dependencies installed successfully"
                    echo "Dependency summary:"
                    npm list --depth=0
                '''
            }
        }
        
        stage('Code Quality Checks') {
            parallel {
                stage('Lint') {
                    steps {
                        echo ' Running ESLint on my-jenkins-pipeline-app...'
                        sh '''
                            npm run lint || echo "Linting completed with warnings"
                        '''
                    }
                }
                stage('Security Audit') {
                    steps {
                        echo 'üîí Running security audit on my-jenkins-pipeline-app...'
                        sh '''
                            npm audit --audit-level=high || echo "Security audit completed"
                        '''
                    }
                }
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running tests for my-jenkins-pipeline-app...'
                sh '''
                    echo "Running React tests with coverage..."
                    npm run test:ci
                    echo " Tests completed successfully"
                    
                    # Display coverage summary
                    if [ -f coverage/lcov.info ]; then
                        echo "Coverage Summary:"
                        grep -E "(LF|SF|end_of_record)" coverage/lcov.info | wc -l
                    fi
                '''
            }
            post {
                always {
                    // Archive test coverage reports
                    publishHTML([
                        allowMissing: false,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'coverage/lcov-report',
                        reportFiles: 'index.html',
                        reportName: 'my-jenkins-pipeline-app Coverage Report'
                    ])
                }
            }
        }
        
        stage('Build Application') {
            steps {
                echo 'üèóÔ∏è Building my-jenkins-pipeline-app...'
                sh '''
                    echo "Creating production build..."
                    
                    # Set build-time environment variables
                    export REACT_APP_VERSION="1.0.${BUILD_NUMBER}"
                    export REACT_APP_BUILD_TIME="$(date -u +%Y-%m-%dT%H:%M:%SZ)"
                    export REACT_APP_GIT_COMMIT="${GIT_COMMIT}"
                    
                    npm run build
                    
                    echo "‚úÖ Build completed successfully"
                    echo "üìä Build stats for my-jenkins-pipeline-app:"
                    ls -la build/
                    du -sh build/
                    
                    # Verify critical files exist
                    [ -f build/index.html ] && echo "‚úÖ index.html found"
                    [ -d build/static ] && echo "‚úÖ static assets found"
                '''
            }
            post {
                success {
                    archiveArtifacts artifacts: 'build/**/*', fingerprint: true
                }
            }
        }
        
        stage('Build Docker Image') {
            when {
                environment name: 'BUILD_DOCKER', value: 'true'
            }
            steps {
                echo 'üê≥ Building Docker image for my-jenkins-pipeline-app...'
                script {
                    // Build the Docker image
                    def image = docker.build("${IMAGE_NAME}:${IMAGE_TAG}")
                    
                    // Tag as latest
                    sh "docker tag ${IMAGE_NAME}:${IMAGE_TAG} ${IMAGE_NAME}:latest"
                    
                    echo "‚úÖ Docker image built successfully"
                    echo "üè∑Ô∏è Image tags: ${IMAGE_NAME}:${IMAGE_TAG}, ${IMAGE_NAME}:latest"
                    
                    // Display image info
                    sh "docker images ${IMAGE_NAME}"
                }
            }
        }
        
        stage('Push to Docker Hub') {
            when {
                environment name: 'BUILD_DOCKER', value: 'true'
            }
            steps {
                echo 'üöÄ Pushing my-jenkins-pipeline-app image to Docker Hub...'
                script {
                    docker.withRegistry('https://registry-1.docker.io/v2/', 'dockerhub-credentials') {
                        // Push both tagged and latest versions
                        def image = docker.image("${IMAGE_NAME}:${IMAGE_TAG}")
                        image.push()
                        image.push('latest')
                    }
                }
                echo "‚úÖ my-jenkins-pipeline-app image pushed successfully to Docker Hub"
                echo "üì¶ Available at: https://hub.docker.com/r/${DOCKER_HUB_USERNAME}/my-jenkins-pipeline-app"
            }
            post {
                always {
                    // Clean up local Docker images to save space
                    sh '''
                        echo "üßπ Cleaning up Docker images..."
                        docker image prune -f --filter "dangling=true"
                        echo "‚úÖ Docker cleanup completed"
                    '''
                }
            }
        }
        
        stage('Deploy') {
            parallel {
                stage('Development Deploy') {
                    when {
                        not { branch 'main' }
                    }
                    steps {
                        echo 'üöß Deploying my-jenkins-pipeline-app to Development Environment...'
                        sh '''
                            echo "üîß Development deployment simulation"
                            echo "üì¶ Application: my-jenkins-pipeline-app"
                            echo "üì¶ Image: ${IMAGE_NAME}:${IMAGE_TAG}"
                            echo "üåç Environment: Development"
                            echo "üîó URL: http://dev-my-jenkins-pipeline-app.example.com"
                            echo "‚úÖ Development deployment completed"
                        '''
                    }
                }
                stage('Production Deploy') {
                    when {
                        branch 'main'
                    }
                    steps {
                        echo 'üéØ Deploying my-jenkins-pipeline-app to Production Environment...'
                        sh '''
                            echo "üöÄ Production deployment simulation"
                            echo "üì¶ Application: my-jenkins-pipeline-app"
                            echo "üì¶ Image: ${IMAGE_NAME}:${IMAGE_TAG}"
                            echo "üåç Environment: Production"
                            echo "üîó URL: https://my-jenkins-pipeline-app.example.com"
                            echo "‚úÖ Production deployment completed"
                        '''
                    }
                }
            }
        }
        
        stage('Post-Deploy Tests') {
            steps {
                echo 'üîç Running post-deployment tests for my-jenkins-pipeline-app...'
                sh '''
                    echo "üè• Health check simulation for my-jenkins-pipeline-app"
                    echo "üìä Performance test simulation"
                    echo "üîí Security scan simulation"
                    echo "‚úÖ Post-deployment tests passed"
                '''
            }
        }
    }
    
    post {
        always {
            echo 'üßπ Cleaning up workspace...'
            cleanWs()
        }
        success {
            echo '''
            üéâ Pipeline completed successfully for my-jenkins-pipeline-app! 
            ‚úÖ All stages passed
            üì¶ Application built and tested
            üê≥ Docker image available on Docker Hub
            üöÄ Ready for deployment
            '''
        }
        failure {
            echo '''
            üö® Pipeline failed for my-jenkins-pipeline-app! 
            ‚ùå Check the logs above for details
            üîß Fix the issues and retry
            '''
        }
        unstable {
            echo '‚ö†Ô∏è Pipeline completed with warnings for my-jenkins-pipeline-app'
        }
    }
}